
<style>
  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .btn-search:hover {
    background-color: #d7373f;
  }

  .btn-search i {
    margin-right: 0.4rem;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 1.5rem;
    font-size: 1rem;
    min-width: 200px;
  }

  .navbar-brand i {
    font-size: 1.5rem;
    color: #fe424d;
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/"><i class="fa-regular fa-compass"></i></a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
      aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link fw-semibold" href="/listings">Explore</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
        </li>
      </ul>

      <!-- Search bar -->
      <form class="d-flex me-3" role="search">
        <input class="form-control me-2 search-input" type="search" placeholder="Search destinations" aria-label="Search">
       <button class="btn btn-danger d-flex align-items-center justify-content-center gap-2 " type="submit">
  <i class="fa-solid fa-magnifying-glass"></i>
  Search
</button>

      </form>

      <!-- Auth buttons -->
      <ul class="navbar-nav mb-2 mb-lg-0">
        <% if (!currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login"><b>Log In</b></a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><b>Log Out</b></a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
